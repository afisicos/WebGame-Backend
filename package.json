{
  "name": "webgame-backend",
  "version": "1.0.0",
  "description": "Backend del proyecto WebGame con Express, Socket.IO y TypeScript",
  "main": "dist/index.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "clean": "if exist dist rmdir /s /q dist",
    "prebuild": "npm run clean"
  },
  "keywords": ["webgame", "backend", "express", "socket.io", "typescript"],
  "author": "afisicos",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
